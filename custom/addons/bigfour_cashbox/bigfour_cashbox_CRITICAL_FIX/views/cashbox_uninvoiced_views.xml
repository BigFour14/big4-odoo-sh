<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="cashbox_uninvoiced_list_view" model="ir.ui.view">
        <field name="name">cashbox.uninvoiced.list</field>
        <field name="model">cashbox.uninvoiced</field>
        <field name="arch" type="xml">
            <list string="Uninvoiced Revenue" create="true" delete="true">
                <field name="name"/>
                <field name="revenue_name"/>
                <field name="amount"/>
                <field name="date"/>
                <field name="cashbox_id"/>
                <field name="state" widget="badge" decoration-success="state == 'approved'" 
                       decoration-warning="state == 'submitted'" decoration-info="state == 'draft'" 
                       decoration-danger="state == 'rejected'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="cashbox_uninvoiced_form_view" model="ir.ui.view">
        <field name="name">cashbox.uninvoiced.form</field>
        <field name="model">cashbox.uninvoiced</field>
        <field name="arch" type="xml">
            <form string="Uninvoiced Revenue">
                <header>
                    <button name="action_submit" string="Submit" type="object" 
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approve" type="object" 
                            class="btn-primary" invisible="state != 'submitted'" 
                            groups="bigfour_cashbox.group_cashier_manager"/>
                    <button name="action_reject" string="Reject" type="object" 
                            class="btn-secondary" invisible="state != 'submitted'" 
                            groups="bigfour_cashbox.group_cashier_manager"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" 
                            class="btn-secondary" invisible="state not in ['rejected']"/>
                    <button name="action_print_receipt" string="Print Receipt" type="object" 
                            class="btn-secondary" invisible="state != 'approved'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="customer_id"/>
                            <field name="revenue_name"/>
                            <field name="amount"/>
                            <field name="currency_id"/>
                            <field name="date"/>
                            <field name="cashbox_id"/>
                            <field name="revenue_account_id"/>
                        </group>
                        <group>
                            <field name="user_id" readonly="1"/>
                            <field name="approved_by" readonly="1" invisible="state != 'approved'"/>
                            <field name="approved_date" readonly="1" invisible="state != 'approved'"/>
                            <field name="receipt_image" widget="image"/>
                            <field name="receipt_filename" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="cashbox_uninvoiced_search_view" model="ir.ui.view">
        <field name="name">cashbox.uninvoiced.search</field>
        <field name="model">cashbox.uninvoiced</field>
        <field name="arch" type="xml">
            <search string="Search Uninvoiced Revenue">
                <field name="name"/>
                <field name="revenue_name"/>
                <field name="amount"/>
                <field name="date"/>
                <field name="cashbox_id"/>
                <field name="state"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                    <filter string="Customer" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Cashbox" name="group_cashbox" context="{'group_by': 'cashbox_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="cashbox_uninvoiced_action" model="ir.actions.act_window">
        <field name="name">Uninvoiced Revenue</field>
        <field name="res_model">cashbox.uninvoiced</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="cashbox_uninvoiced_list_view"/>
        <field name="search_view_id" ref="cashbox_uninvoiced_search_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first uninvoiced revenue
            </p>
            <p>
                Record cash revenue that doesn't have an invoice
            </p>
        </field>
    </record>
</odoo>

