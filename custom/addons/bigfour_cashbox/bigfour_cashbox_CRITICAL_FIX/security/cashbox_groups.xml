<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cashbox User Groups -->
    <record id="group_cashier_user" model="res.groups">
        <field name="name">Cashier User</field>
        <field name="category_id" ref="base.module_category_accounting"/>
        <field name="comment">Portal user can access cashbox operations</field>
    </record>

    <record id="group_cashier_manager" model="res.groups">
        <field name="name">Cashier Manager</field>
        <field name="category_id" ref="base.module_category_accounting"/>
        <field name="implied_ids" eval="[(4, ref('group_cashier_user'))]"/>
        <field name="comment">Manager can manage all cashbox operations and approve transactions</field>
    </record>

    <!-- Add cashier manager to accounting manager group -->
    <record id="base.group_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_cashier_manager'))]"/>
    </record>
</odoo>

