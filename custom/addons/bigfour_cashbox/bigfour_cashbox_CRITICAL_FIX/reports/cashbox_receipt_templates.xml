<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Expense Receipt Report -->
    <record id="action_report_cashier_expense_receipt" model="ir.actions.report">
        <field name="name">Expense Receipt</field>
        <field name="model">cashier.expense</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">bigfour_cashbox.report_cashier_expense_receipt</field>
        <field name="report_file">bigfour_cashbox.report_cashier_expense_receipt</field>
        <field name="binding_model_id" ref="model_cashier_expense"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_cashier_expense_receipt">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="text-center">
                            <h2>Expense Receipt</h2>
                        </div>
                        <div class="row mt32">
                            <div class="col-6">
                                <strong>Reference:</strong> <span t-field="o.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Date:</strong> <span t-field="o.date"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <strong>Expense Name:</strong> <span t-field="o.expense_name"/>
                            </div>
                            <div class="col-6">
                                <strong>Amount:</strong> <span t-field="o.amount"/> <span t-field="o.currency_id.name"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <strong>Cashbox:</strong> <span t-field="o.cashbox_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Status:</strong> <span t-field="o.state"/>
                            </div>
                        </div>
                        <div class="row mt16" t-if="o.description">
                            <div class="col-12">
                                <strong>Description:</strong><br/>
                                <span t-field="o.description"/>
                            </div>
                        </div>
                        <div class="row mt32">
                            <div class="col-6">
                                <strong>Created by:</strong> <span t-field="o.user_id.name"/>
                            </div>
                            <div class="col-6" t-if="o.approved_by">
                                <strong>Approved by:</strong> <span t-field="o.approved_by.name"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

