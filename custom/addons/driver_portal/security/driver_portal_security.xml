
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Driver Portal Security Groups -->
        <record id="group_driver_portal_user" model="res.groups">
            <field name="name">Driver Portal User</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="comment">Driver Portal basic user access</field>
        </record>

        <record id="group_driver_portal_manager" model="res.groups">
            <field name="name">Driver Portal Manager</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('group_driver_portal_user'))]"/>
            <field name="comment">Driver Portal manager with full access</field>
        </record>

        <!-- Record Rules for Driver Trip -->
        <record id="driver_trip_rule_own_records" model="ir.rule">
            <field name="name">Driver Trip: Own Records Only</field>
            <field name="model_id" ref="model_driver_trip"/>
            <field name="domain_force">[('driver_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_driver_portal_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="driver_trip_rule_manager_all" model="ir.rule">
            <field name="name">Driver Trip: Manager All Records</field>
            <field name="model_id" ref="model_driver_trip"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_driver_portal_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules for Driver Document -->
        <record id="driver_document_rule_own_records" model="ir.rule">
            <field name="name">Driver Document: Own Records Only</field>
            <field name="model_id" ref="model_driver_document"/>
            <field name="domain_force">[('driver_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_driver_portal_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="driver_document_rule_manager_all" model="ir.rule">
            <field name="name">Driver Document: Manager All Records</field>
            <field name="model_id" ref="model_driver_document"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_driver_portal_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>

