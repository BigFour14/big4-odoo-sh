
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Expired Documents Report Template -->
        <template id="report_expired_documents_document">
            <t t-call="web.html_container">
                <div class="page">
                    <h2>Expired Documents Report</h2>
                    <p>Generated on: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/></p>
                    
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Document Name</th>
                                <th>Driver</th>
                                <th>Document Type</th>
                                <th>Expiration Date</th>
                                <th>Days Overdue</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="doc">
                                <tr>
                                    <td><span t-field="doc.name"/></td>
                                    <td><span t-field="doc.driver_id.name"/></td>
                                    <td><span t-field="doc.document_type"/></td>
                                    <td><span t-field="doc.expiration_date"/></td>
                                    <td><span t-esc="abs(doc.days_to_expiry)"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>

        <!-- Expired Documents Report Action -->
        <record id="action_report_expired_documents" model="ir.actions.report">
            <field name="name">Expired Documents Report</field>
            <field name="model">driver.document</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">driver_portal.report_expired_documents_document</field>
            <field name="report_file">driver_portal.report_expired_documents_document</field>
        </record>

        <!-- Menu Item for Expired Documents Report -->
        <record id="menu_expired_documents_report" model="ir.ui.menu">
            <field name="name">Expired Documents Report</field>
            <field name="parent_id" ref="menu_driver_portal"/>
            <field name="action" ref="action_report_expired_documents"/>
            <field name="sequence" ref="30"/>
        </record>
    </data>
</odoo>

