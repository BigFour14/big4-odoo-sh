
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron Job for Document Expiry Check -->
        <record id="cron_check_document_expiry" model="ir.cron">
            <field name="name">Check Document Expiry</field>
            <field name="model_id" ref="model_driver_document"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_document_expiry()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>
    </data>
</odoo>

